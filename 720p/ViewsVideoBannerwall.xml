<includes>
<!-- ===================================================================================== -->
<!-- ============================== BANNER WALL VIEW ID 519 ============================== -->
<!-- =================================== TV Shows only =================================== -->
	<include name="BannerWallView">
		<control type="group">
		<visible>Control.IsVisible(519)</visible>
			<!-- wall panel -->
			<control type="wraplist" id="519">
				<posx>680</posx>
				<posy>240</posy>
				<width>1150</width>
				<height>460</height>
				<onleft>2</onleft>
				<onright>519</onright>
				<onup>519</onup>
				<ondown>519</ondown>
				<viewtype label="BannerRightList">wraplist</viewtype>
				<orientation>vertical</orientation>
				<pagecontrol>60</pagecontrol>
				<scrolltime>180</scrolltime>
				<preloaditems>2</preloaditems>
				<visible>Container.Content(TVShows)</visible>
				<itemlayout height="106" width="575">
					<control type="group"> <!-- banner mod -->
						<posx>0</posx>
						<posy>0</posy>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>575</width>
						<height>106</height>
						<aspectratio>stretch</aspectratio>
						<texture>black-back3.png</texture>
						<colordiffuse>AAFFFFFF</colordiffuse>
					</control>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>575</width>
							<height>106</height>
							<aspectratio>stretch</aspectratio>
							<fadetime>200</fadetime>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<bordertexture border="8">ThumbBorder.png</bordertexture>
							<bordersize>5</bordersize>
						</control>
						<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>575</width>
						<height>106</height>
						<aspectratio>stretch</aspectratio>
						<texture>black-back3.png</texture>
						<colordiffuse>AAFFFFFF</colordiffuse>
					</control>
					</control>
				</itemlayout>
				<focusedlayout height="140" width="758">
					<control type="group">	
						<posx>0</posx>
						<posy>0</posy>
						<control type="image"> <!-- banner mod -->
							<posx>0</posx>
							<posy>0</posy>
							<width>575</width>
							<height>106</height>
							<aspectratio>stretch</aspectratio>
							<fadetime>200</fadetime>
							<animation effect="zoom" end="110" center="360,288" time="200">Focus</animation>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<bordertexture border="8">ThumbBorder.png</bordertexture>
							<bordersize>5</bordersize>
						</control>
					</control>
				</focusedlayout>
			</control>
			<!-- Tv show info down thebottom -->	
			<control type="image">
				<posx>-5</posx>
				<posy>570</posy>
				<width>1303</width>
				<height>160</height>
				<texture>ContentPanel.png</texture>
			</control>
			<control type="group">
				<posx>30</posx>
				<posy>580</posy>
				<visible>Control.IsVisible(519) | Container.Content(TVShows)</visible>
				<control type="label">
					<description>First Aired</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>440</width>
					<height>25</height>
					<label fallback="416">[COLOR=blue]$LOCALIZE[20416]: [/COLOR]$INFO[listitem.premiered]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13</font>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Thumb)</visible> 
				</control>
				<control type="label">
					<description>Genre</description>
					<posx>0</posx>
					<posy>30</posy>
					<width>440</width>
					<height>25</height>
					<label fallback="416">[COLOR=blue]$LOCALIZE[515]: [/COLOR]$INFO[listitem.genre]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13</font>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Thumb)</visible> 
				</control>
				<control type="label">
					<description>Seasons</description>
					<posx>0</posx>
					<posy>65</posy>
					<width>440</width>
					<height>25</height>
					<label fallback="416">[COLOR=blue]$LOCALIZE[40020]: [/COLOR]$INFO[ListItem.Property(TotalSeasons) ]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13</font>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Thumb)</visible> 
				</control>
				<control type="label">
					<description>Episodes</description>
					<posx>0</posx>
					<posy>100</posy>
					<width>580</width>
					<height>25</height>
					<label fallback="416">[COLOR=blue]$LOCALIZE[20360]: [/COLOR]$INFO[listitem.episode] [COLOR=grey] ($INFO[ListItem.Property(WatchedEpisodes),, $LOCALIZE[16102]] - $INFO[ListItem.Property(UnWatchedEpisodes), , $LOCALIZE[16101]])[/COLOR]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13</font>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Thumb)</visible> 
				</control>
				<control type="image">
					<width>161</width>
					<height>110</height>
					<posx>570r</posx>
					<posy>10</posy>
					<fadetime>100</fadetime>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[listitem.Studio,flagging/studios/,.png]</texture>
				</control>
				<control type="image">
				<description>MPAA Rating Flagging Images</description>
				<posx>570r</posx>
				<posy>0</posy>
				<width>800</width>
				<align>right</align>
				<include>VideoMPAAFlaggingConditions</include>
			</control>

				<!-- TV SHOW LOGO -->
				<control type="largeimage" id="7914"> 
					<posx>370r</posx> 
					<posy>-10</posy> 
					<width>335</width> 
					<height>130</height> 
					<texture>$INFO[ListItem.path]logo.png</texture> 
					<fadetime>100</fadetime> 
					<aspectratio scalediffuse="false">keep</aspectratio> 
					<visible>!IsEmpty(ListItem.Thumb)</visible> 
				</control>			
			</control>
		</control>
	</include>
</includes>
